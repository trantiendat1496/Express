extends ../layouts/admin.pug

block content
    
    .wrapper

        .container.mt-5
            h1 Update User

            if errors   
                each error in errors
                    .alert.alert-danger= error

            form(method = "POST")
                .form-group
                    lable(for="name") Name
                    input#name.form-control(name= "name", type = "text",value= user.name)

                

                .form-group
                    lable(for="phone") Phone
                    input#phone.form-control(name= "phone", type = "text",value= user.phone)    

                

                .form-group
                    lable(for="avatar") Avatar
                    input#avatar.form-control-file(name="avatar", type = "file") 

                button.btn.btn-primary Update