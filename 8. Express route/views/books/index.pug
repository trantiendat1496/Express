extends ../layouts/template.pug

block content
    h1
        Span.mr-3 BOOK
        a.btn.btn-primary(href="books/create") New

    .d-flex.align-item-center
        form.ml-auto(action="books/search" method="get", class="d-flex")
            input(type="text", name = "q", class="form-control")
            button(class="btn btn-primary ml-2") Search

    table.table
        tr
            th Name
            th Description
            th Action

        if books.length > 0
            each book in books
                tr                                  
                    td= book.name
                    td= book.description
                    td 
                        a.btn.btn-light.mr-3(href='/books/'+ book.id) Delete
                        a.btn.btn-light(href='/books/view/' + book.id) Edit

